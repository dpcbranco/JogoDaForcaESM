package servidor;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.ArrayList;
import java.util.Scanner;

public class Servidor {
	
	ServerSocket servidor;
	ArrayList <Socket> jogadores = new ArrayList<>();
	
	public Servidor () throws IOException {
		servidor = new ServerSocket(12345);
		System.out.println("Porta 12345 aberta!");

		jogadores.add(servidor.accept());
		
		System.out.println("Nova conexão com o cliente " +   
				jogadores.get(jogadores.size() - 1).getInetAddress().getHostAddress()
				);

		Scanner s = new Scanner(jogadores.get(0).getInputStream());
		while (s.hasNextLine()) {
			System.out.println(s.nextLine());
		}

		s.close();
		servidor.close();
		jogadores.get(0).close();
	}
}